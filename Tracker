    private void ArrivalButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        
        /*
        The current date is determined, and subtracted from the arrival date
        to get the difference in dates, which is the days until arrival
        
        date is in dd mm yyyy format
        */
        
        String dateArrival = arrivalDate.getText();
    
        DateFormat df = new SimpleDateFormat("dd MM yyyy");
        Date dateobj = new Date();
        System.out.println(df.format(dateobj));

        SimpleDateFormat myFormat = new SimpleDateFormat("dd MM yyyy");

        try {
            Date date2 = myFormat.parse(dateArrival);
            long diffDates = date2.getTime() - dateobj.getTime(); 
            
            long dateoutput = TimeUnit.DAYS.convert(diffDates, TimeUnit.MILLISECONDS);
            
            dateoutput+=1;
            
            System.out.println ("Days: " + TimeUnit.DAYS.convert(diffDates, TimeUnit.MILLISECONDS));
            directions.setText(dateoutput + " DAYS UNTIL ARRIVAL");
            
        } catch (ParseException e) {
            e.printStackTrace();
        }
        
        DefaultTableModel dt2 = (DefaultTableModel) table2.getModel();
        Vector v2 = new Vector();
        
        try {
            v2.add(arrivalDate.getText());
            v2.add(directions.getText()); 

            dt2.addRow(v2);
        //catches exceptions if user inputs wrong type of value (not double) in price textfield
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Please enter proper values");
        }
    }                                             

